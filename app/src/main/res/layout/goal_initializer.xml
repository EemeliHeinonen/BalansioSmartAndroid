<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:text="How would you like to continue?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="25sp" />

    <Button
        android:text="Customize my goals"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:id="@+id/customizeGoals" />

    <TextView
        android:text="You can set your own goals in the app."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAlignment="center" />

    <Button
        android:text="Use Default Goals"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:id="@+id/defaultGoals"
        android:layout_weight="0.01" />

    <TextView
        android:text="A default setting is done for you."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textAlignment="center" />

</LinearLayout>
