<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/goal_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <com.quattrofolia.balansiosmart.CompletionRing
        android:id="@+id/goalItemCompletionCircle"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="100px"
        android:layout_height="100px" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_accomplishments"
                android:text="Accomplishments"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="25dp"
                android:layout_height="1dp"
                android:background="@color/bs_content" />

            <TextView
                android:id="@+id/textView_disciplineFrequency"
                android:text="Frequency"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView_goalItemType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView_discipline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/layout_goalItemSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>