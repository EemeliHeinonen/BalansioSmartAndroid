<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BSCenteredFragment">

    <LinearLayout
        style="@style/BSCenteredContainer">

        <TextView
            android:id="@+id/textViewGoalIntensity"
            style="@style/BSCaption"
            android:hint="textView2" />

        <NumberPicker
            android:id="@+id/npGoalIntensityAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textViewGoalIntensityDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="times a" />

        <NumberPicker
            android:id="@+id/npGoalIntensityTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            style="@style/BSCenteredContainer">

            <Button
                android:id="@+id/btnIntensityNext"
                style="@style/BSButton.SpanWidth"
                android:text="Set" />

            <Button
                android:id="@+id/btnIntensitySkip"
                style="@style/BSButton.Dismiss.Spanwidth"
                android:text="Skip" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>