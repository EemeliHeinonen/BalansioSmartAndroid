<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BSCenteredFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_goalDetailContainer"
        style="@style/BSDetailContainer">

        <TextView
            android:id="@+id/textView_goalTypeHeader"
            style="@style/BSCaption.Table" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_goalSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        style="@style/BSCenteredContainer"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/textViewGoalIntensity"
            style="@style/BSCaption"
            android:text="Measure" />

        <LinearLayout style="@style/BSCenteredContainer"
            android:orientation="horizontal">

            <NumberPicker
                android:id="@+id/npGoalIntensityAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewGoalIntensityDesc"
                style="@style/BSContent"
                android:text="times per" />

            <NumberPicker
                android:id="@+id/npGoalIntensityTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout style="@style/BSCenteredContainer">

            <Button
                android:id="@+id/btnIntensityNext"
                style="@style/BSButton.SpanWidth"
                android:text="Set" />

            <Button
                android:id="@+id/btnIntensitySkip"
                style="@style/BSButton.Dismiss.Spanwidth"
                android:text="Skip" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>