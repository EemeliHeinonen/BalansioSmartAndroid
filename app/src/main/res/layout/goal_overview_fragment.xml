<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BSCenteredFragment">

    <LinearLayout
        android:id="@+id/layout_goalDetailContainer"
        style="@style/BSDetailContainer">

        <TextView
            android:id="@+id/textView_goalTypeHeader"
            style="@style/BSCaption.Table" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_goalSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout style="@style/BSCenteredContainer">

        <TextView
            android:id="@+id/tvOverviewType"
            style="@style/BSContent"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvOverviewFrequency"
            style="@style/BSContent" />

        <TextView
            android:id="@+id/tvOverviewRangeMin"
            style="@style/BSContent" />

        <TextView
            android:id="@+id/tvOverviewRangeMax"
            style="@style/BSContent" />

        <LinearLayout style="@style/BSCenteredContainer">

            <Button
                android:id="@+id/btnOverviewFinish"
                style="@style/BSButton.SpanWidth"
                android:text="Create goal and finish" />

            <Button
                android:id="@+id/btnOverviewAnother"
                style="@style/BSButton.SpanWidth"
                android:text="Create another goal" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>