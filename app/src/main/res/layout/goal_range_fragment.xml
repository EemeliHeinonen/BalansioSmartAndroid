<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimum value of the goal range"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewGoalRangeMin"/>

    <NumberPicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker_min"
        android:layout_below="@id/textViewGoalRangeMin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maximum value of the goal range"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewGoalRangeMax"
        android:layout_below="@id/numberPicker_min"/>

    <NumberPicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker_max"
        android:layout_below="@id/textViewGoalRangeMax"
        />

    <Button
        android:id="@+id/btnRangeNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=">"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"/>

</RelativeLayout>