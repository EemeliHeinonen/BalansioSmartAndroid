<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="textView2"
        android:id="@+id/textViewGoalRange"/>

    <NumberPicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker_min"
        android:layout_below="@id/textViewGoalRange"
        />

    <NumberPicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker_max"
        android:layout_below="@id/numberPicker_min"
        />

    <Button
        android:id="@+id/btnRangeNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=">"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>