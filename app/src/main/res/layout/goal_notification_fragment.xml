    <CheckBox android:id="@+id/cbBefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beforehand"
        android:layout_below="@id/tvNotificationRemind"
        android:textSize="25sp" />

    <CheckBox android:id="@+id/cbOnTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On time"
        android:layout_below="@id/cbBefore"
        android:textSize="25sp" />

    <CheckBox android:id="@+id/cbForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If I forgot"
        android:layout_below="@id/cbOnTime"
        android:textSize="25sp" />

    <Button
        android:text=">"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnNotificationNext"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"/>

</RelativeLayout>