<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bs_content</item>
        <item name="colorPrimaryDark">@color/bs_contentDark</item>
        <item name="colorAccent">@color/bs_emphasis</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- BS button styles -->

    <style name="BSButton">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/bs_contentLight</item>
    </style>

    <style name="BSButton.Alert">
        <item name="android:background">@drawable/alert_button_background</item>
    </style>

    <style name="BSButton.SpanWidth">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="BSButton.Dismiss">
        <item name="android:background">@drawable/dismiss_button_background</item>
    </style>

    <style name="BSButton.Dismiss.Spanwidth">
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- BS text styles -->

    <style name="BSContent">
        <item name="android:textColor">@color/bs_content</item>
        <item name="android:padding">@dimen/bs_generalContentPadding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BSContent.Intro">
        <item name="android:textColor">@color/bs_contentLight</item>
    </style>

    <style name="BSCaption">
        <item name="android:textColor">@color/bs_content</item>
        <item name="android:padding">@dimen/bs_generalContentPadding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="BSCaption.Intro">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/bs_contentLight</item>
    </style>

    <style name="BSCaption.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BSSplashImage">
        <item name="android:layout_width">@dimen/splash_img_diameter</item>
        <item name="android:layout_height">@dimen/splash_img_diameter</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- BS positioning styles -->

    <style name="BSCenteredContainer">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/bs_generalContentPadding</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="BSCenteredFragment">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BSCenteredFragment.Intro">
        <item name="android:background">@color/bs_emphasis</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
